{
	"format_version": "1.20.20",
	"minecraft:block": {
		"description": {
			"identifier": "mrsir:hopper_marker",
			"menu_category": {
				"category": "items"
			}
		},
		"components": {
			"minecraft:collision_box": false,
			"minecraft:selection_box": true,		//so that player can select/destroy it
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.25
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 14
			},
			"minecraft:flammable": {
				"destroy_chance_modifier": 20,
				"catch_chance_modifier": 1
			},
			"minecraft:geometry": "geometry.hopper_marker",
			"minecraft:material_instances": {
				"*": {
					"texture": "hopper_marker",
					"render_method": "alpha_test",
					"face_dimming": false,
					"ambient_occlusion": true
				}
			},
			"minecraft:light_emission": 7,
			"minecraft:map_color": "#ffffff"
		}
	}
}